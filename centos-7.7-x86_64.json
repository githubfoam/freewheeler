{
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/{{user `mirror_centos_major`}}/isos/x86_64/CentOS-7-x86_64-NetInstall-{{user `mirror_centos_minor`}}.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-7.7-x86_64-{{build_type}}",
    "vm_name": "packer-centos-7.7-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7.7/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "iso_url": "{{user `mirror`}}/{{user `mirror_centos_major`}}/isos/x86_64/CentOS-7-x86_64-NetInstall-{{user `mirror_centos_minor`}}.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-7.7-x86_64-{{build_type}}",
    "vm_name": "packer-centos-7.7-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7.7/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }, {
    "type": "vmware-iso",
    "guest_os_type": "centos-64",
    "iso_url": "{{user `mirror`}}/{{user `mirror_centos_major`}}/isos/x86_64/CentOS-7-x86_64-NetInstall-{{user `mirror_centos_minor`}}.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-7.7-x86_64-{{build_type}}",
    "vm_name": "packer-centos-7.7-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7.7/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "tools_upload_flavor": "linux",
    "shutdown_command": "sudo systemctl poweroff"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/centos-7.7/repo.sh",
      "scripts/centos/virtualbox.sh",
      "scripts/centos/vmware.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/centos/locale.sh",
      "scripts/centos-7.7/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "centos-7.7-x86_64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "vagrant_cloud_token":"",
    "iso_checksum": "937bf0a7b0932817f84f7230f15ed88911bbbd85c0c958680792b7f8d8f9c1a9",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "https://mirrors.edge.kernel.org/centos",
    "mirror_centos_major": "7",
    "mirror_centos_minor": "1908",
    "ssh_timeout": "60m"
  }
}
